{{#section 'head'}}
	<title>{{title}}</title>
	<link rel="stylesheet" type="text/css" href="/styles/displayGraph.css">
	<script src="/js/common.js"></script>
	<script src="/js/graphFunctions.js"></script>
	<script>
		var Dashboard = {};
		Dashboard.params = {};
		Dashboard.name = "{{graph_name}}";
		{{#each defaults}}
		var {{this.[0]}} = "{{this.[1]}}";
		Dashboard.params.{{this.[0]}} = "{{this.[1]}}";
		{{/each}}
		var link_template = "{{{link}}}";
	</script>
{{/section}}
<div id="overlaydiv" class="hide"></div>
<div id="graph_container">
	<div id="headerspan">
			<table>
				<tr>
					<td id="titlespan" rowspan={{paramlength}}><a href="/" id="title">{{graph_name}}</a></td>
					<td id="blankspan" rowspan={{paramlength}}></td>
					{{#each params}}
						{{> (paramlist .) parent=..}}
					{{/each}}
				</tr>
			
			</table>
	</div>
	<div id="bodyspan">
		<div id="graphdiv">
			<iframe id="graphimg" height="800" width="1200"></iframe>
		</div>	
	</div>
</div>
<div id="logs_container" class="hide">
	{{> logs}}
</div>

{{#section 'foot'}}
	{{#each scripts}}
		<script src="/js/parameters/{{this}}"></script>
	{{/each}}
	<script>
		updateGraph();
	</script>
{{/section}}
